.top__wrapper
  %div
    - if user_signed_in?
      - if current_user.otp_required_for_login
        = button_to "ログアウト", destroy_user_session_path, method: :delete
        = button_to "Disable 2FA二段階認証無効", two_factor_auth_path, method: :delete
        /= link_to('マイページ', 'home/show')
    - else
      = button_to "Enable 2FA二段階認証する", new_two_factor_auth_path, method: :get
      = button_to "ログイン", new_user_session_path, class: 'post'
      = link_to "新規登録", new_user_registration_path, class: 'post'

  .title
    秘密ポケット
    .title__sub
      あなたの秘密をしまっておこう!
      %p.notice= notice
      %p.alert= alert
      = link_to('マイページ', 'home/show')
    .title__image
    = image_tag 'naisyo_woman.png', alt: 'aa', height: '', width: '', class: ''